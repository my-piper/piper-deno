{
  "env": {
    "browser": false,
    "es2021": true,
    "deno": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "no-var": "error",
    "prefer-const": "error",
    "eqeqeq": ["error", "always"],
    "no-eval": "error",
    "camelcase": ["warn", { "properties": "never" }],
    "no-throw-literal": "error"
  },
  "ignorePatterns": [
    "node_modules/",
    "deno.lock",
    "*.lock"
  ]
}

