{
  "env": {
    "browser": true,
    "es2021": true,
    "deno": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "prefer-const": "error",
    "no-var": "error",
    "eqeqeq": ["error", "always"],
    "no-eval": "error"
  },
  "ignorePatterns": [
    "node_modules/",
    "deno.lock",
    "*.test.ts",
    "*.test.js"
  ]
}
